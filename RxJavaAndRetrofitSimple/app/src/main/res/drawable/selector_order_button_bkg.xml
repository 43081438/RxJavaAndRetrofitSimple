<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/height_thin_divider" android:color="#cccccc" />
            <corners android:radius="3dp" />
            <solid android:color="@color/color_order_actions_button_disable" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="@dimen/height_thin_divider" android:color="@color/main_blue" />
            <corners android:radius="3dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>